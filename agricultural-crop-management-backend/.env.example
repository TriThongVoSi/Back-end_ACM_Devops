# Backend secrets/config template
# Copy this file to .env and fill in your values
# DO NOT commit the .env file!

SPRING_PROFILES_ACTIVE=dev
APP_URL=http://localhost:3000
MAIL_FROM=your_email@example.com
MAIL_ENABLED=true

# JWT
JWT_SIGNER_KEY=your_jwt_signer_key_here
JWT_VALID_DURATION=3600
JWT_REFRESHABLE_DURATION=36000

# Database
DB_URL=jdbc:mysql://localhost:3306/quanlymuavu
DB_USER=your_db_user
DB_PASS=your_db_password

# Docker MySQL
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=quanlymuavu
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# SMTP (Gmail/Google Workspace)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password
SMTP_AUTH=true
SMTP_STARTTLS=true

# Gemini AI (optional)
GEMINI_API_KEY=your_gemini_api_key_here
